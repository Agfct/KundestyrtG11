<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import org.controlsfx.control.CheckComboBox?>

<GridPane style="-fx-background-color: GREEN" fx:id="timelineContainer" gridLinesVisible="true" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.40">
	<columnConstraints>
		<ColumnConstraints minWidth="200" prefWidth="200"
			maxWidth="200" />
		<ColumnConstraints hgrow="NEVER" maxWidth="1000"/>
	</columnConstraints>
	<children>
		<GridPane fx:id="timelineInfo" gridLinesVisible="true"  GridPane.columnIndex="0" maxHeight="150" maxWidth="-Infinity" minHeight="150"
			minWidth="-Infinity" prefHeight="150" prefWidth="200"
			>
			<columnConstraints>
				<ColumnConstraints hgrow="NEVER" minWidth="10.0"
					prefWidth="100.0" />
				<ColumnConstraints hgrow="NEVER" minWidth="10.0"
					prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="5" prefHeight="30.0"
					vgrow="NEVER" />
				<RowConstraints minHeight="5" prefHeight="30.0"
					vgrow="NEVER" />
				<RowConstraints minHeight="5" prefHeight="30.0"
					vgrow="NEVER" />
			</rowConstraints>
			<children>
				<Button fx:id="removeTimelineBtn" onAction="#buttonPressed"
					GridPane.rowIndex="0" GridPane.columnIndex="2">X</Button>
				<CheckComboBox fx:id="checkComboBox" prefWidth="200" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
<!-- 				<Label text="Enabled: " GridPane.rowIndex="2" /> -->
<!-- 				<CheckBox mnemonicParsing="false" selected="true" text="CheckBox" -->
<!-- 					GridPane.columnIndex="1" GridPane.rowIndex="2" /> -->
			</children>
		</GridPane>
		<!-- This is the underlying anchorPane of the TimelineLine, it enables the timelineLine to slide back and forth -->
		<AnchorPane style="-fx-background-color: cyan" fx:id="timelineLineContainer" GridPane.columnIndex="1">
		<!-- Here is the timelineLine.fxml -->
		</AnchorPane>
	</children>
</GridPane>
