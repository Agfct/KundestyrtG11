<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import gui.TimelineVBox?>
<?import javafx.scene.control.Button?>

<GridPane  gridLinesVisible="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.40">
  <!-- ColumConstrains: There is one constraint per column and one per row. these needs to be configured to suit the GUI elements -->
  <columnConstraints>
		<ColumnConstraints percentWidth="100"/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints percentHeight="32" minHeight="10.0" prefHeight="140.0" vgrow="NEVER" />
    <RowConstraints maxHeight="25" minHeight="20" prefHeight="25" vgrow="NEVER" />
    <RowConstraints percentHeight="66" minHeight="10.0" vgrow="ALWAYS" />
  </rowConstraints>
   <children>
		<!-- This is the Scroll pane that contains the VBox with the TimeLineObjects -->
      <ScrollPane GridPane.columnSpan="2" GridPane.rowIndex="2" >
         <content>
            <TimelineVBox fx:id="timelineContainer" prefHeight="250.0" maxWidth="-Infinity" style="-fx-background-color: RED" />
         </content>
      </ScrollPane>
      <GridPane  gridLinesVisible="true" GridPane.columnSpan="2">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <!-- The children here is all the GUI elements in the top part of the advanced screen -->
        <children>
        <Button id="menuBtn" text="_Menu" onAction="#buttonPressed" mnemonicParsing="true" />
        <Button id="addTimeLineBtn" text="_Add" onAction="#buttonPressed" mnemonicParsing="true" GridPane.rowIndex="2"/>
        </children>
      </GridPane>
   </children>
</GridPane>
